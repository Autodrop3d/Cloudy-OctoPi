set -x
set -e

export LC_ALL=C

source /common.sh
install_cleanup_trap

apt install libevent-dev libjpeg8-dev libbsd-dev libraspberrypi-dev

git clone --depth=1 https://github.com/pikvm/ustreamer
cd ustreamer
make WITH_OMX=1
useradd -r ustreamer
usermod -a -G video ustreamer

cp /files/services/ustreamer@.service /etc/systemd/system/ustreamer@.service
systemctl disable webcamd
systemctl enable ustreamer@video0
